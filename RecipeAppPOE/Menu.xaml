<Window x:Class="RecipeAppPOE.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeAppPOE"
        mc:Ignorable="d"
        Title="Window2" Height="450" Width="800">
    <Grid Background="Black">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="307">
            <!-- Button for adding more recipes -->
            <Button Content="1. Add more recipes" Click="AddRecipesButton_Click" FontSize="18" Width="239" Foreground="White" BorderBrush="{x:Null}" Background="{x:Null}" Margin="0,5,0,20" FontWeight="Bold" FontFamily="Cascadia Mono SemiBold">
                <Button.Effect>
                    <DropShadowEffect Color="#FFFE89FF" Direction="313" BlurRadius="3" ShadowDepth="2"/>
                </Button.Effect>
            </Button>
            <!-- Button for displaying all recipes -->
            <Button Content="2. Display all recipes" Click="DisplayRecipesButton_Click" Margin="0,5,0,20" Tag="all" FontSize="18" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="White" FontWeight="Bold" FontFamily="Cascadia Code SemiBold">
                <Button.Effect>
                    <DropShadowEffect Color="#FFFE89FF" Direction="313" BlurRadius="3" ShadowDepth="2"/>
                </Button.Effect>
            </Button>
            <!-- Button for scaling or resetting quantities -->
            <Button Content="3. Scale or reset" Margin="0,5,0,20" Tag="all" FontSize="18" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="White" Click="ScaleButton_Click" FontWeight="Bold" FontFamily="Cascadia Code SemiBold">
                <Button.Effect>
                    <DropShadowEffect Color="#FFFE89FF" Direction="313" BlurRadius="3" ShadowDepth="2"/>
                </Button.Effect>
            </Button>
            <!-- Button for deleting a recipe -->
            <Button Content="4. Delete a recipe" Margin="0,5,0,20" Tag="all" FontSize="18" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="White" Click="DeleteButton_Click" FontWeight="Bold" FontFamily="Cascadia Code SemiBold">
                <Button.Effect>
                    <DropShadowEffect Color="#FFFE89FF" Direction="313" BlurRadius="3" ShadowDepth="2"/>
                </Button.Effect>
            </Button>
            <!-- Button for exiting the application -->
            <Button Content="5. Exit" Margin="0,5,0,0" Tag="all" FontSize="18" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="White" Click="ExitButton_Click" FontWeight="Bold" FontFamily="Cascadia Code SemiBold">
                <Button.Effect>
                    <DropShadowEffect Color="#FFFE89FF" Direction="313" BlurRadius="3" ShadowDepth="2"/>
                </Button.Effect>
            </Button>
        </StackPanel>
        <!-- Border for visual styling -->
        <Border BorderBrush="White" BorderThickness="1,1,1,1" Margin="56,48,56,54">
            <Border.Effect>
                <DropShadowEffect Color="#FFFE89FF" Direction="313" BlurRadius="3" ShadowDepth="2"/>
            </Border.Effect>
        </Border>
    </Grid>
</Window>
